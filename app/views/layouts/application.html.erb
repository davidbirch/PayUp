<!DOCTYPE html>
<html>
<head>
  <title>Pay Up Chump</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>

<body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= image_tag("logo.jpg") %>
    <%= @page_title || "Pay Up Chump" %>
  </div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
      <div id="cart">
        <%= render @cart %>
      </div>
      <% end %>
      <ul>
        <li><a href="/">Home</a></li>
      </ul>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
